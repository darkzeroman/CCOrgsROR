= form_for @user, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :first_name, :class => 'control-label'
    .controls
      = f.text_field :first_name, :class => 'text_field'
  .control-group
    = f.label :last_name, :class => 'control-label'
    .controls
      = f.text_field :last_name, :class => 'text_field'
  .control-group
    = f.label :email, :class => 'control-label'
    .controls
      = f.text_field :email, :class => 'text_field'
  .control-group
    = f.label :gt_id, :class => 'control-label'
    .controls
      = f.text_field :gt_id, :class => 'text_field'
  .control-group
    = f.label :gt_user_id, :class => 'control-label'
    .controls
      = f.text_field :gt_user_id, :class => 'text_field'
  .control-group
    = f.label :is_admin, :class => 'control-label'
    .controls
      = f.check_box :is_admin, :class => 'check_box'
  .control-group
    = f.label :password, :class => 'control-label'
    .controls
      = f.text_field :password, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), users_path, :class => 'btn'
